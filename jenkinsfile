pipeline {
    agent any
    environment {
        registry = "020046395185.dkr.ecr.eu-central-1.amazonaws.com/app"
    }
   
    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/Umair841/ECS-pipeline.git']]])     
            }
        }
  
    // Building Docker images
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry
        }
      }
    }
   
    // Uploading Docker images into AWS ECR

 
    stage('Pushing to ECR') {
     steps{  
         script {
                sh 'aws ecr get-login-password --region eu-central-1 | docker login --username AWS --password-stdin 020046395185.dkr.ecr.eu-central-1.amazonaws.com'
                sh 'docker push 020046395185.dkr.ecr.eu-central-1.amazonaws.com/app:latest'
         }
        }
      }    
    }
}
